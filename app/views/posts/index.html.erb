<h1>  Blog </h1>
<%  @posts.each do |post| %>
	<h2><%= link_to post.title, post %></h2>
	<p><%= post.content %></p>
	<p>
		<%= link_to "Editar", edit_post_path(post) %> |
		<%= link_to "Eliminar", post, :method => :delete, data: {confirm: "Seguro?" }%>
	</p>
	<hr/>
<% end %>

<p><%= link_to "Add a New Post", new_post_path %></p>